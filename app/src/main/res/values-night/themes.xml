<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Definindo cores personalizadas -->
    <color name="my_custom_primary_light">#1c449b</color>
    <color name="my_custom_primary_dark">#FF000000</color> <!-- Substitua pelo valor desejado -->

    <!-- Base application theme. -->
    <style name="Base.Theme.HorasDeProducao" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_custom_primary_light</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Cor do texto na barra principal para o tema claro -->
    </style>

    <!-- Tema derivado -->
    <style name="Theme.HorasDeProducao" parent="Base.Theme.HorasDeProducao">
        <!-- Customize your theme here. -->
    </style>

    <!-- Tema escuro -->
    <style name="Base.Theme.HorasDeProducao.Dark" parent="Base.Theme.HorasDeProducao">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/my_custom_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Cor do texto na barra principal para o tema escuro -->
    </style>

    <style name="Theme.HorasDeProducao.Dark" parent="Base.Theme.HorasDeProducao.Dark">
        <!-- Customize your dark theme here. -->
    </style>

</resources>
